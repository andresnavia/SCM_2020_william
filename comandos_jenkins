pipeline {
    agent any
    environment {
        VARIABLE_X = 'Variable Ejemplo SCM Usb cali'
            PROJECT_NAME = 'SCM_CALI - Basico'
    }
    stages {
        stage('Etapa 0') {
            steps {
                echo "Proyecto ${PROJECT_NAME}"
            }
        }
        stage('Etapa 1') {
            steps {
                bat 'mvn -f simple validate'
            }
        }
        stage('Etapa 2') {
            steps {
                bat 'mvn -f simple install'
            }
        }
        stage('Etapa 3') {
            steps {
                bat 'mvn -f simple package'
            }
        }
        stage('Etapa 4') {
            steps {
                bat 'java -cp  simple/target/simple-2.0.jar co.edu.usbcali.scm.App'
            }
        }
        stage('Etapa 5') {
            steps {
                  slackSend botUser: true, 
                  channel: '#avisos', 
                  color: '#00ff00', 
                  message: 'Se termina el proceso', 
                  tokenCredentialId: 'token'
            }
        }
    }
    post {
        aborted {
            echo "BUILD ABORTED"
        }
        success {
            echo "BUILD SUCCESS"
            echo "Seria bueno mantener esta construccion"
        }
        unstable {
            echo "BUILD UNSTABLE"
        }
        failure {
            echo "BUILD FAILURE"
            echo "Revisar Fallos"
        }
    }
}
